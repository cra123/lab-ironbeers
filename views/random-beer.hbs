<div class="d-flex random-beer">
    <div class="flex-shrink-0 random-beer-image ">
        <img src="{{beer.0.image_url}}" alt="...">
    </div>
    <div class="product-content">
        <div class="flex-grow-1 ms-6 decription ">
          <h1>{{beer.0.name}}</h1>
        </div>
        <div class="flex-grow-1 ms-3 decription ">
            <p>{{beer.0.tagline}}</p>
        </div>
        <div class="flex-grow-1 ms-3 decription ">
           <p>{{beer.0.description}}</p>
        </div>
        <div class="flex-grow-1 ms-3 decription ">
            <h5>Food Pairing</h5>
            <ul>
                {{#each beer.0.food_pairing}}
                    <li>{{this}}</li>
                {{/each}}   
            </ul>
        </div>

        <div class="flex-grow-1 ms-3 decription ">
            <p>{{beer.0.brewers_tips}}</p>
        </div>

    </div>
  
</div>